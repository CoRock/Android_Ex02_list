<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/submenu"
        android:title="sub menu">

        <menu>
            <!-- checkableBehavior="all" is able to check all items -->
            <group
                android:id="@+id/check_group"
                android:checkableBehavior="all">

                <item
                    android:id="@+id/bigfont"
                    android:title="BigFont" />
            </group>

            <!-- checkableBehavior="single" is radio button -->
            <group
                android:id="@+id/check_group2"
                android:checkableBehavior="single">

                <item
                    android:id="@+id/red"
                    android:checked="true"
                    android:title="Red" />

                <item
                    android:id="@+id/green"
                    android:checked="true"
                    android:title="Green" />

                <item
                    android:id="@+id/blue"
                    android:title="Blue" />
            </group>

        </menu>
    </item>

</menu>